/* --- BEGIN CODE --- */
option Choice {
    let is_enable: Boolean
    let is_visible: Boolean
    A {
        a: Int
    }
    B {
        b: Int
    }
}

fun main() {
    let a = Choice::A @[
        is_enable: true,
        is_visible: false,
        a: 42,
    ]

    let b = Choice::B @[
        is_enable: false,
        is_visible: true,
        b: 24,
    ]

    let c: Choice = if true { a } else { b }
    let d: Choice = if false { a } else { b }

    println("Choice c: variant: ${c.variant}, is_enable: ${c.is_enable}, is_visible: ${c.is_visible}")
    println("Choice d: variant: ${d.variant}, is_enable: ${d.is_enable}, is_visible: ${d.is_visible}")
}
/* --- END CODE --- */
/* --- BEGIN OUTPUT ---
Choice c: variant: 0, is_enable: true, is_visible: false
Choice d: variant: 1, is_enable: false, is_visible: true
--- END OUTPUT --- */
