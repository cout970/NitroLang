fun NCode.add_let(
    span: Span,
    name: String,
    type_usage: Optional<NTypeUsage>
): NVar {
    last_id += 1
    last_var_id += 1

    let variable = NVar @[
        id: last_var_id,
        span,
        current_block,
        name,
        type_usage,
        defined_by: last_id,
        defined_in: this,
    ]
    vars[] = variable

    let i = NInst @[
        id: last_id,
        span,
        current_block,
        kind: NInstKind::Let @[variable],
    ]
    inst[] = i
    ret variable
}

