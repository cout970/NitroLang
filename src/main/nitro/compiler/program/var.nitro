
type_alias NVarId = Int

struct NVar {
    id: NVarId
    span: Span
    block: NBlock
    name: String
    type_usage: NTypeUsage
    type_token: Optional<TypeToken>
    defined_by: NInstId
    defined_in: NCode
    is_parameter: Boolean
    is_upvalue: Boolean
}

fun NVar.to_string(): String {
    ret "[var: $name $type_token ${span.link}]"
}