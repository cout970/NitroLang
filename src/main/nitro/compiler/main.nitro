include "./includes.nitro"

let new_compiler: Boolean = true

fun main() {
    println("New compiler: $new_compiler")

    let args = Runtime::get_program_args()
    let input = args[0].get_or_default("src/main/nitro/compiler/main.nitro")
    let output = args[1].get_or_default("output.wasm")
    let cache = args[2]

    println("Input: $input")
    println("Output: $output")
    println("Cache: $cache")

    CompilationUnit::compile_all(input, output, cache)
}
