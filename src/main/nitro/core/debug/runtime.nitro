
// This module provides utilities to extract information about the runtime environment
mod runtime {

    // Returns the list of arguments passed to the program
    fun get_program_args(): List<String> {
        let args = []

        repeat runtime::program_arg_count() {
            args[] = runtime::program_arg_get(it)
        }

        ret args
    }

    // Internal functions

    @Extern [lib: "core", name: "runtime_program_arg_count"]
    fun program_arg_count(): Int {}

    @Extern [lib: "core", name: "runtime_program_arg_get"]
    fun program_arg_get(index: Int): String {}
}